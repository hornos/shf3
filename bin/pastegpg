#!/bin/bash

# install: http://pastebin.com/dSyh0xCc

# Usage:
# pastegpg put FILE [TIME]
# | pastegpg put - [TIME]
# pastegpg get URL


gpg_opt="-z9"
pastebin_raw="http://pastebin.com/raw.php"

function help/pastegpg() {
  cat <<EOF
Usage:
  pastegpg CMD FILE [EXPIRY]
  | pastegpg CMD - [EXPIRY]
  CMD = put|get
EOF
  exit 1
}

function pastegpg/put() {
  local _f=${1:--}
  local _e=${2:-1M}
  gpg ${gpg_opt} -c -o - ${_f} | \
  ascii85 | \
  pastebincl -e ${_e} -g
}

function pastegpg/get() {
  local _url=${1##*/}
  if test -z "${_url}" ; then
    exit 1
  fi
  curl -s ${pastebin_raw}?i=${_url} | \
  ascii85 -d | \
  gpg 2> /dev/null
}

_cmd=${1:-help}
shift
case ${_cmd} in
  put|get)
    pastegpg/${_cmd} $*
  ;;
  help|*)
    help/pastegpg
  ;;
esac
